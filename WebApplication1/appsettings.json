{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "sqlHangfire": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=TestApiHangfire;Integrated Security=True;Connect Timeout=30;Encrypt=False;TrustServerCertificate=True"
  },
  "AllowedHosts": "*",
  "ADFS": {
    "Authority": "https://your-adfs-server.domain.com/adfs",
    "Audience": "your-api-identifier"
  },
  "ReverseProxy": {
    "Routes": {
      "api-route": {
        "ClusterId": "api-cluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "api-cluster": {
        "Destinations": {
          "destinations1": {
            "Address": "http://localhost:5001/"
          }
        }
      }
    }
  }
}